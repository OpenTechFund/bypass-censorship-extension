{
  "name": "bypass-censorship-extension",
  "version": "1.2.2",
  "description": "Find access to blocked websites",
  "scripts": {
    "build:dev": "rimraf dist/dev && parcel build manifest.json --target dev",
    "build:watch": "rimraf dist/dev && parcel watch manifest.json --target dev",
    "build": "rimraf dist/prod && parcel build manifest.json --target prod",
    "build:xpi": "rimraf dist/xpi && web-ext build --source-dir ./dist/prod --artifacts-dir ./dist/xpi",
    "build:src": "rimraf dist/bypass-censorship-extension-src.zip && zip -r -FS ./dist/bypass-censorship-extension-src.zip * --exclude '*.git' 'node_modules/*' 'dist/*'",
    "start:firefox": "web-ext run --verbose --firefox=firefoxdeveloperedition --source-dir ./dist/dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "targets": {
    "dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "prod": {}
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenTechFund/bypass-censorship-extension.git"
  },
  "author": "Josh King <josh@throneless.tech>",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/OpenTechFund/bypass-censorship-extension/issues"
  },
  "homepage": "https://github.com/OpenTechFund/bypass-censorship-extension#readme",
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 0.2%"
  ],
  "devDependencies": {
    "@parcel/config-webextension": "^2.3.2",
    "@types/jest": "^27.4.1",
    "@types/webextension-polyfill": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.5.1",
    "mockzilla": "^0.12.0",
    "parcel": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "web-ext": "^6.7.0"
  },
  "dependencies": {
    "@types/firefox-webext-browser": "^94.0.1",
    "array-from": "^2.1.1",
    "runtypes": "^6.5.1",
    "webext-options-sync": "^3.0.1",
    "webext-storage-cache": "^5.0.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es2017": true,
      "browser": true,
      "node": true,
      "jest/globals": true,
      "webextensions": true
    },
    "overrides": [
      {
        "files": [
          "**/*.js",
          "**/*.jsx"
        ],
        "extends": [
          "eslint:recommended",
          "plugin:import/errors",
          "plugin:import/warnings",
          "plugin:jest/recommended",
          "plugin:node/recommended-module",
          "plugin:promise/recommended",
          "prettier"
        ]
      },
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/typescript-estree",
        "parserOptions": {
          "sourceType": "module",
          "project": "./tsconfig.json",
          "allowImportExportEverywhere": true
        },
        "extends": [
          "plugin:@typescript-eslint/recommended",
          "prettier"
        ]
      }
    ],
    "rules": {
      "node/no-extraneous-import": [
        "error",
        {
          "allowModules": [
            "lodash"
          ]
        }
      ],
      "node/shebang": [
        "error",
        {
          "convertPath": {
            "src/**/*.js": [
              "^src/(.+?)\\.js$",
              "dist/$1.js"
            ]
          }
        }
      ]
    }
  }
}
